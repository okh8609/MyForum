@model MyForum.Models.FamMsg


@*新增留言表單*@
@using (Ajax.BeginForm("Add", "FamMsg", new { FA_ID = ViewData["FA_ID"] },
    new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "MessageList" }, new { }))
{
    <table>
        <tr>
            <td>
                @User.Identity.Name
            </td>
            <td>
                @Html.TextBoxFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
                <input type="submit" value="來留言" />
            </td>
        </tr>
    </table>
}