@model MyForum.ViewModel.MemberRegisterView

@{
    ViewBag.Title = "註冊";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<link href="@Url.Content("~/Content/css/register.css")" rel="stylesheet" type="text/css" />
<body style="background-color:#1B1E28;">
    <div class="col-lg-12">
        <div class="col-lg-4">
        </div>

        <div class="col-lg-8">
            <h1>註冊會員</h1>


            <div class="form">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.newMember.Account, new { @class = "col-xs-4 col-md-2 form-label" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.newMember.Account, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.newMember.Account, null, new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-xs-4 col-md-2 form-label" })
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PasswordCheck, htmlAttributes: new { @class = "col-xs-4 col-md-2 form-label" })
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.PasswordCheck, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PasswordCheck, "", new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.newMember.Name, new { @class = "col-xs-4 col-md-2 form-label" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.newMember.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.newMember.Name, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.newMember.Email, new { @class = "col-xs-4 col-md-2 form-label" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.newMember.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.newMember.Email, null, new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input class="btn btn-primary" type="submit" value="送出" />
                            </div>
                        </div>

                        <div class="alert alert-warning" style="background-color: white; border: 0px;">
                            @Html.ValidationSummary()
                        </div>

                    </div>
                }
            </div>


            <div class="login1">Already Registered?</div>
            <a href="/Member/Login" class="login2">LOG IN</a>
        </div>
    </div>
</body>