@model MyForum.ViewModel.MemberRegisterView

@{
    ViewBag.Title = "註冊";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<link href="@Url.Content("~/Content/styles/register.css")" rel="stylesheet" type="text/css" />
<body style="background-color:#1B1E28;">
    <div class="page-form">
        <h1>註冊會員</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" id="top" style="padding-top: 40px;">
                    @Html.LabelFor(model => model.newMember.Account, new { @class = "col-xs-4 col-md-2 col-md-offset-1 form-label" })
                    <div class="col-xs-8 col-md-8">
                        <div class="col-xs-8 col-md-10">
                            @Html.TextBoxFor(model => model.newMember.Account, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-8 col-md-2">
                            @Html.ValidationMessageFor(model => model.newMember.Account, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group" id="top" style="padding-top: 20px;">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-xs-4 col-md-2 col-md-offset-1 form-label" })
                    <div class="col-xs-8 col-md-8">
                        <div class="col-xs-8 col-md-10">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-8 col-md-2">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "label label-danger" })
                        </div>


                    </div>
                </div>

                <div class="form-group" id="top" style="padding-top: 20px;">
                    @Html.LabelFor(model => model.PasswordCheck, htmlAttributes: new { @class = "col-xs-4 col-md-2 col-md-offset-1 form-label" })
                    <div class="col-xs-8 col-md-8">
                        <div class="col-xs-8 col-md-10">
                            @Html.PasswordFor(model => model.PasswordCheck, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-8 col-md-2">
                            @Html.ValidationMessageFor(model => model.PasswordCheck, "", new { @class = "label label-danger" })
                        </div>


                    </div>
                </div>

                <div class="form-group" id="top" style="padding-top: 20px;">
                    @Html.LabelFor(model => model.newMember.Name, new { @class = "col-xs-4 col-md-2 col-md-offset-1 form-label" })
                    <div class="col-xs-8 col-md-8">
                        <div class="col-xs-8 col-md-10">
                            @Html.TextBoxFor(model => model.newMember.Name, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-8 col-md-2">
                            @Html.ValidationMessageFor(model => model.newMember.Name, null, new { @class = "label label-danger" })
                        </div>


                    </div>
                </div>
                <div class="form-group" id="top" style="padding-top: 20px;">
                    @Html.LabelFor(model => model.newMember.Email, new { @class = "col-xs-4 col-md-2 col-md-offset-1 form-label" })
                    <div class="col-xs-8 col-md-8">
                        <div class="col-xs-8 col-md-10">
                            @Html.TextBoxFor(model => model.newMember.Email, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-8 col-md-2">
                            @Html.ValidationMessageFor(model => model.newMember.Email, null, new { @class = "label label-danger" })
                        </div>


                    </div>
                </div>

                <div class="form-group">
                    <div class="submit">
                        <input class="btn btn-primary" type="submit" value="註冊" />
                    </div>
                </div>

                @*<div class="alert alert-warning"  border: 10px;">
                    @Html.ValidationSummary()
                </div>*@
                <div class="box1">
                    <a href="/Member/Login" class="login2">按此登入</a>
                    
                </div>

                <div class="box2">
                    <div class="login1">註冊過了?</div>
                </div>
            </div>
        }
    </div>
</body>