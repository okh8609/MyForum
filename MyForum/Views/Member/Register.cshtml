@model MyForum.ViewModel.MemberRegisterView

@{
    ViewBag.Title = "註冊";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<div class="page-header">
    <h1>註冊</h1>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert alert-warning">
        @Html.ValidationSummary()
    </div>
    <div class="form-horizontal">
        <h4>MemberRegisterView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Account, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.newMember.Account, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Account, null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PasswordCheck, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.PasswordCheck, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordCheck, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Name, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.newMember.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Name, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Email, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.newMember.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Email, null, new { @class = "label label-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="註冊" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

