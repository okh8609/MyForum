@model MyForum.ViewModel.ArticleView
@{
    ViewBag.Title = "人氣文章列表";
}
@*宣告變數rank，紀錄排名*@
@{ int rank = 1; }
@*標題*@

@Styles.Render("~/Content/popular")
@*<link href="@Url.Content("~/Content/styles/popular.css")" rel="stylesheet" type="text/css" />*@
<body style="background-color:#1B1E28;">
    <div class="page-header">
        <h1>人氣文章列表</h1>
    </div>
    @*文章列表*@
    <div class="table-responsive">
        <table class="table table-hover">
            @*判斷資料庫中是否有資料存在*@
            @if (!Model.DataList.Count.Equals(0))
            {
                @*設定表格的表頭標題*@
                <thead>
                    <tr>
                        <th>
                            排名
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataList[0].Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataList[0].Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataList[0].CreateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataList[0].Watch)
                        </th>
                    </tr>
                </thead>
                @*將人氣文章顯示於表格中*@
                foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            @rank
                            @{ rank++; }
                        </td>
                        <td>
                            @Html.ActionLink(item.Title, "Article", new { Id = item.A_Id })
                        </td>
                        <td>
                            @item.Member.Name
                        </td>
                        <td>
                            @item.CreateTime
                        </td>
                        <td>
                            @item.Watch
                        </td>
                    </tr>
                }
            }
            @*資料庫中無任何一筆文章，將顯示尚未有文章的資訊*@
            else
            {
                <tr>
                    <td colspan="4">
                        尚未有文章
                    </td>
                </tr>
            }
        </table>
    </div>
    @Html.ActionLink("返回文章列表", "Index")
</body>