@model MyForum.Models.Board

<div class="modal-dialog">
    <div class="modal-content create-form">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title">
                新增看板
            </h3>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @*建立修改留言所須的表單*@
                @using (Html.BeginForm("Add", "Board", FormMethod.Post))
                {
                    @*產生新增文章資料表單內容*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Account, new { @class = "col-xs-4 form-label" })
                        <div class="col-xs-8">
                            @User.Identity.Name
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.B_name, new { @class = "col-xs-4 form-label" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(model => model.B_name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.B_name, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-primary" id="createBtn" type="button" value="新增看板" />
            <input class="btn btn-default" data-dismiss="modal" type="button" value="取消" />
        </div>
    </div>
</div>
