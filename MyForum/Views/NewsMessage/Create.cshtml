@model MyForum.Models.NewsMessage

@*新增留言表單*@
@using (Ajax.BeginForm("Add", "NewsMessage", new { NA_ID = ViewData["NA_ID"] },
    new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "MessageList" }, new { }))
{
    <table>
        <tr>
            <td>
                @Html.TextBoxFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </td>
            <td>
                <input type="submit" value="留言" />
            </td>
        </tr>
    </table>
}