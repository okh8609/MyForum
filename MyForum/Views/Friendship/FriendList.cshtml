@model MyForum.ViewModel.FriendshipView

@*文章列表表格*@
<div class="table-responsive">
    <table class="table table-hover">
        @*若資料庫中有文章，將會列出文章*@
        @if (Model.DataList.Count != 0)
        {
            <thead>
                <tr>
                    <th>
                        @*放加入好友了欄位*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataList[0].Account)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataList[0].Email)
                    </th>

                </tr>
            </thead>
            foreach (var item in Model.DataList)
            {
                <tr>
                    <td>
                        @Html.ActionLink("加入", "Add", new { p2 = @item.Account })
                    </td>
                    <td>
                        @item.Account
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Email
                    </td>
                </tr>
            }
        }
        else
        {
            @*若無文章，則印出"尚未有文章"*@
            <tr>
                <td colspan="4">
                    無好友
                </td>
            </tr>
        }
    </table>
</div>

